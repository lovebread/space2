<% delivery = video_feed_delivery %>
<% video = delivery.feed_item.originator %>
<div class="feed-list-box">
<div class="feed-list" id='feed_delivery_<%= delivery.id %>'>
  <div class="feed-icon icon-video"></div>
	<% if delivery.is_deleteable_by? current_user %><%= link_to_remote "", :url => feed_delivery_url(delivery), :method => :delete,:html=>{ :class => "icon-active"} %><% end %> 
	<p><%= profile_link video.poster %> 分享了视频 <%= video_link video, :class => "shine"%></p>
  <p class="gray s_clear" id='video_<%= video.id %>'> <%= video_thumbnail video, :class=>'imgbox01' %></p>
	<p class="gray"><%= ftime video.created_at %> <%= link_to_function "评论", "Iyxzone.Comment.showForm('video', #{video.id}, null)", :class => "gray" %></p>
	<%= render :partial => 'user/comments/folded_comment_box', :locals => {:commentable => video, :recipient => video.poster} %>
</div>
</div>
