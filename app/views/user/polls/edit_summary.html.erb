<div class='title01'>
  <%= link_to_function '', "facebox.close();", :class => "icon-active icon-active-close" %>
  <h3>修改选项说明</h3>
</div>

<% form_remote_for :poll, :url => poll_url(@poll), :html => {:method => :put} do |f| %>
<div class='formcontent'>
  <div class="rows s_clear">
    <div class="fldid"><label for="des">选项说明：</label></div>
    <div class="fldvalue">
      <%= f.text_area 'explanation', :rows => 12 %>
    </div>
  </div>
</div>
<div class="buttons s_clear">
  <table class="center" cellpadding="0"><tr><td>
    <span class="button"><span><button type="submit">完成</button></span></span>
    <span class="button button-gray"><span><button type="button" onclick="facebox.close();">取消</button></span></span>
  </td></tr></table>
</div>
<% end %>
