<% guild = comment.commentable %>
<% if home_page %>
<% link = "#{link_to_function guild.name, "Iyxzone.Home.NoticeManager.read(#{notice.id}, '#{form_authenticity_token}'); window.open('/guilds/#{guild.id}?reply_to=#{comment.poster_id}');"}" %>
<% else %>
<% link = "#{link_to_function guild.name, "window.open('/guilds/#{guild.id}?reply_to=#{comment.poster_id}');"}" %>
<% end %>
<li>
	<div class="feed-message">
    <% if home_page %>
		<%= link_to_function '', "Iyxzone.Home.NoticeManager.read(#{notice.id}, '#{form_authenticity_token}')", :class => 'icon-active' %>
		<% end %>
    <% if notice.data == 'comment' %>
			<%= profile_link comment.poster %> 在工会 <%= link %> 上留言了 
		<% elsif notice.data == 'reply' %>
			<%= profile_link comment.poster %> 在工会 <%= link %> 中回复了你
		<% end %> 		
	</div>
</li>
