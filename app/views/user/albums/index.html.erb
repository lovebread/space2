<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
	<% if @user==current_user %>
    <h1 class="app-photo">照片</h1>
	<% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class=>"imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的照片</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
	<% end %>
    <div class="box02 canvas_int">
	    <div class="tab tab01">
		    <div class="right">
			    <%= link_to "上传照片", select_personal_albums_url %>
			    <%= facebox_link "新建相册", new_personal_album_url %>
        </div>
        <ul>
			    <% subject = get_subject @user %><li><span><%= link_to "热门照片", hot_personal_photos_url(:id => @user.id) %></span></li>
          <li class='hover'><span><%= link_to "#{subject}的相册", personal_albums_url(:id => @user.id) %></span></li>
          <li><span><%= link_to "圈了#{subject}的照片", relative_personal_photos_url(:id => @user.id) %></span></li>
			    <% if @user == current_user %>
				    <li><span><%= link_to '好友相册', friends_personal_albums_url(:id => @user.id) %></span></li>
			    <% end %>
        </ul>				
	    </div>
      <div class="box02 appcontent01">
		    <h3>共 <span><%= @user.albums_count %></span> 个专辑</h3>
        <div class="piclist">
          <ul class='pics-list s_clear'>
			      <%= render :partial => 'album_item', :collection => @albums %>
          </ul>
        </div>
      </div>
    </div>
    <%= will_paginate @albums %>
  </div></div>
</div></div></div></div>
