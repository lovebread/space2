<div class="edit-toggle space">
  <h3 class="s_clear">
    <strong class="left">装备</strong>
    <% if guild.president == current_user %>
      <%= link_to_function "<span class='icon-active icon-active-edit w-l'></span>编辑", "Iyxzone.Guild.Editor.editGears(#{guild.id})", :class => "right red"  %>
    <% end %>
  </h3>
  <div class="formcontent con con2">
    <div class="item space">
      <% guild.gears.each do |gear| %>
      <div class="rows s_clear" id='gear_<%= gear.id %>'>
        <div class="fldid"><label><%= gear.name %>：</label></div>
        <div class="fldvalue"><%= gear.cost %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>

