<% delivery = blog_feed_delivery %>
<% blog = delivery.feed_item.originator %>
<div class="feed-list-box">
<div class="feed-list" id='feed_delivery_<%= delivery.id %>'>
	<div class="img left">
		<div class="imgbox01"><%= avatar blog.poster %></div>
	</div>
  <% if delivery.is_deleteable_by? current_user %>
    <%= link_to_remote '', :url => feed_delivery_url(delivery), :method => :delete, :html => {:class => 'icon-active'} %>
  <% end %>
  <div class="jl-list-con"><%= profile_link blog.poster%>编写了日志<%= blog_link blog, :class => 'shine'%>
  <p class="gray jl-con">
		<%= truncate blog.content, :length => 80, :omission => '...' %>
	</p>
  <p class="gray"><%= ftime delivery.created_at %></p>
	</div>
</div>
</div>
