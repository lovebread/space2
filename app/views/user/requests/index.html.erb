<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-vgame">通知</h1>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <ul>
          <li><span><%= link_to "通知", notifications_url %></span></li>
          <li class='hover'><span><%= link_to "请求", requests_url %></span></li>
          <li><span><%= link_to "邀请", invitations_url %></span></li>
        </ul>
      </div>
      <div class="box02 appcontent03">
        <div class='nav-link'>
          <ul class='s_clear'>
            <% if params[:type].blank? %>
              <li class='hover'><%= link_to "<span>所有请求</span>", requests_url %></li>
            <% else %>
              <li><%= link_to "<span>所有请求</span>", requests_url %></li>
            <% end %>
            <% if params[:type].to_i == 1 %>
              <li class='hover'><%= link_to "<span>好友请求</span>", requests_url(:type => 1) %></li>
            <% else %>
              <li><%= link_to "<span>好友请求</span>", requests_url(:type => 1) %></li>
            <% end %>
            <% if params[:type].to_i == 2 %>
              <li class='hover'><%= link_to "<span>活动请求</span>", requests_url(:type => 2) %></li>
            <% else %>
              <li><%= link_to "<span>活动请求</span>", requests_url(:type => 2) %></li>
            <% end %>
            <% if params[:type].to_i == 3 %>
              <li class='hover'><%= link_to "<span>工会请求</span>", requests_url(:type => 3) %></li>
            <% else %>
              <li><%= link_to "<span>工会请求</span>", requests_url(:type => 3) %></li>
            <% end %>
          </ul>
        </div>        
        <% @requests.each do |request| %>
          <% if request.instance_of? Friendship %>
            <%= render :partial => 'friend_request', :object => request %>
          <% elsif request.instance_of? Participation %>
            <%= render :partial => 'event_request', :object => request %>
          <% elsif request.instance_of? Membership %>
            <%= render :partial => 'guild_request', :object => request %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div></div>
</div></div></div></div>

<%= will_paginate @requests %>
