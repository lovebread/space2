<div class="title01">
  <%= link_to_function '', "facebox.close();", :class => "icon-active icon-active-close" %>
  <h1>更改头像</h1>
</div>

<% form_for :photo, :url => avatars_url(:album => params[:album]), :html => {:multipart => true, :target => 'upload_frame'} do |f| %>
<div class='formcontent'>
  <div class="rows s_clear">
    支持png, gif, jpg, 最大4MB
  </div>
  <div class="rows s_clear">
    <div class="fldvalue">
      <%= f.file_field 'uploaded_data' %>
    </div>
  </div>
</div>
<div class="buttons s_clear">
  <table class="center" cellpadding="0"><tr><td>
    <span class="button"><span><button type="submit">上传</button></span></span>
    <span class="button button-gray"><span><button type="button" onclick="facebox.close();">取消</button></span></span>
  </td></tr></table>
</div>
<% end %>

<iframe id='upload_frame' name='upload_frame' style='width:1px;height:1px;border:0px' src="about:blank"></iframe>


