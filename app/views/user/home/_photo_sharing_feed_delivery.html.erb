<% delivery = photo_sharing_feed_delivery %>
<% sharing = delivery.feed_item.originator %>
<% user = sharing.poster %>
<% photo = sharing.sharable%>
<div class="feed-list-box">
<div class="feed-list" id='feed_delivery_<%= delivery.id %>'>
	<div class="img left">
		<div class="imgbox01"><%= avatar user %></div>
	</div>
	<div class="jl-list-con jlcutline">
	<%= profile_link user %> <span>分享了<%= profile_link photo.poster%>的照片</span>
  <% if delivery.is_deleteable_by? current_user %><%= link_to_remote "", :url => feed_delivery_url(delivery), :method => :delete, :html => {:class => "icon-active"} %><% end %>
  <p class="gray jl-con">
		<div class="mcAvatar jl-gray-bd">
			<div class="picwrap">
				<div class="middle">
					<div class="middle-center">
						<div class="center">
							<%= photo_link photo, :size => :large %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</p>
	<p class="gray"><%= ftime delivery.created_at %> <%= link_to_function "评论", "Iyxzone.Comment.showForm('avatar', #{avatar.id}, null);", :class => "gray"%></p>
	<%= render :partial => "user/comments/folded_comment_box", :locals => {:commentable => avatar , :recipient => avatar.poster} %>
  </div>
</div>
</div>
