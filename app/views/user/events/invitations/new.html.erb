<%= javascript_include_tag 'invitation' %>
<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"><%= album_cover_image @event.album, :class => "imgbox01" %></span>
      <p class="left">
        <strong><%= @event.title %>活动邀请</strong><br/>
        <%= link_to '活动主页', event_url(@event), :class => 'red' %>
      </p>
    </div>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <div class="icon">
          <%= link_to "邀请更多人", new_event_invitation_url(@event), :class => 'icon-add-table' %>
        </div>
        <ul>
          <li><span><%= link_to "一定去的人", event_participations_url(@event, :type => 0) %></span></li>
          <li><span><%= link_to "可能去的人", event_participations_url(@event, :type => 1) %></span></li>
          <li><span><%= link_to "受邀请的人", event_participations_url(@event, :type => 2) %></span></li>
          <li><span><%= link_to "请求加入的人", event_participations_url(@event, :type => 3) %></span></li>
        </ul>
      </div>
      <div class="friend-box">
        <div class="appcontent01">
          <div class="path-box">
            <label>活动"<%= event_link @event %>"</label>
            <span>邀请好友</span>
          </div><br/>
          <div class="friend-invite-head">
            <strong class="green"><% if @guild %>搜索工会战友的游戏角色：<% else %>搜索好友的游戏角色<% end %></strong> 
            <%= text_field_tag 'search', '输入游戏角色的名字', :class => 'ipt', :onclick => "this.clear();" %>
            <%= observe_field :search,
                    :complete  => "Iyxzone.Invitation.Builder.reset();",
                    :update    => "invitations",
                    :frequency => 1,
                    :url       => search_event_invitations_url(@event),
                    :with      => "'key='+$('search').value",
                    :method    => :get  %>
          </div>
          <div class="friend-invite-list">
          <% if @characters.blank? %>
              你的好友没有可以参加该活动的游戏角色
          <% else %>
            <div id='invitations'><%= render :partial => 'characters' %></div>
            <div class="rows s_clear">
              <%= button_to_function '', "Iyxzone.Invitation.Builder.submit($('invitation_form'))", :class => "button05 png" %>
            </div>
          <% end %>  
          </div>
        </div>
      </div>
    </div>
  </div></div>
</div></div></div></div>
<% form_tag event_invitations_url(@event), :id => 'invitation_form' do %>
<% end %>
