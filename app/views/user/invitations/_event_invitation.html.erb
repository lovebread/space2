<% invitation = event_invitation %>
<div class="request-box" id='event_invitation_<%= invitation.id %>'>
  <h4><span> <%= ftime invitation.created_at %> </span>活动</h4>
  <div class="request-list s_clear">
    <div class="img"><%= avatar invitation.event.poster %> </div>
    <div class="info">
      <p> <%= profile_link invitation.event.poster %> 邀请你加入他的活动 <%= event_link invitation.event %>, 是否同意？</p>
      <div class="buttons" id='event_invitation_option_<%= invitation.id %>'>
        <%= link_to_remote '<span>肯定去</span>', :url => accept_event_invitation_url(invitation.event, invitation, :show => 2, :status => Participation::Confirmed), :method => :put, :html => {:class => "button"} %>
        <%= link_to_remote '<span>可能去</span>', :url => accept_event_invitation_url(invitation.event, invitation, :show => 2, :status => Participation::Maybe), :method => :put, :html => {:class => "button"} %>
        <%= link_to_remote '<span>不去</span>', :url => decline_event_invitation_url(invitation.event, invitation, :show => 2), :method => :delete, :html => {:class => "button button-gray"} %>
      </div>
    </div>
  </div>
</div>
