<h1>分享名称：</h1>
<div style="padding: 20px 0 20px 20px;">
<%= @sharing.title %>
</div>

<h1>分享理由：</h1>
<div style="padding: 20px 0 20px 20px;">
<% if @sharing.reason != '' %>
  <%= @sharing.reason %>
<% else %>
  <%= 'nil'%>
 <% end %>
</div>

<tr id='sharing <%= @sharing.id %>'>
<td>
	<% if @sharing.verified == 0 || @sharing.verified == 2 %>
		<%= link_to_remote '审核通过', :url => verify_admin_sharing_url(@sharing), :method => :put %>
	<% end %>
</td>
<td>
	<% if @sharing.verified == 0 || @sharing.verified == 1 %>
		<%= link_to_remote '屏蔽', :url => unverify_admin_sharing_url(@sharing), :method => :put %>
	<% end %>
</td>
</tr> 
