<h1>状态内容：</h1>
<div style="padding: 20px 0 20px 20px;">
<%= @status.content %>
</div>

<tr id='status <%= @status.id %>'>
<td>
	<% if @status.verified == 0 || @status.verified == 2 %>
		<%= link_to_remote '审核通过', :url => verify_admin_status_url(@status), :method => :put %>
	<% end %>
</td>
<td>
	<% if @status.verified == 0 || @status.verified == 1 %>
		<%= link_to_remote '屏蔽', :url => unverify_admin_status_url(@status), :method => :put %>
	<% end %>
</td>
</tr> 