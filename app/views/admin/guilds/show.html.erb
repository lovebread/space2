<h1>工会名称：</h1>

<div style="padding: 20px 0 20px 20px;">
<%= @guild.name %>
</div>

<h1>工会描述：</h1>

<div style="padding: 20px 0 20px 20px;">
<%= @guild.description %>
</div>

<tr id='guild <%= @guild.id %>'>
<td>
	<% if @guild.verified == 0 || @guild.verified == 2 %>
		<%= link_to_remote '审核通过', :url => verify_admin_guild_url(@guild), :method => :put %>
	<% end %>
</td>
<td>
	<% if @guild.verified == 0 || @guild.verified == 1 %>
		<%= link_to_remote '屏蔽', :url => unverify_admin_guild_url(@guild), :method => :put %>
	<% end %>
</td>
</tr> 