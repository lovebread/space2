<%= javascript_include_tag 'textboxlist' %>
<%= javascript_include_tag 'nicEdit' %>
<%= javascript_include_tag 'news' %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-news">修改新闻</h1>
    <div class="box02 canvas_int">
      <div class='appcontent01'>
        <div id='errors'></div>
        <div class="cons-form formcontent">
          <% form_for :news, :html => {:id => 'news_form', :method => :put} do |f| %>
            <div class='rows s_clear'>
              <div class='fldid'><%= f.label "新闻标题：" %></div>
              <div class='fldvalue'><div class='textfield'><%= f.text_field 'title' %></div></div>
            </div>
            <div class='rows s_clear'>
              <%= f.text_area 'data', :style => "width: 100%; height: 300px;" %>
            </div>
            <div class='rows s_clear'>
              <div class='fldid'><%= f.label "新闻原地址："%></div>
              <div class='fldvalue'><div class='textfield'><%= f.text_field 'origin_addr' %></div></div>
            </div>
            <div class='rows s_clear'>
              <div class='fldid'>
                <%= f.label "新闻类别：" %>
              </div>
              <div class='fldvalue'>
                <%= f.select :news_type, %w{文字 视频 图片}, :class => "selector selector02"%>
              </div>
            </div>
            <div class='rows s_clear'>
              <div class='fldid'>
                <%= f.label "相关游戏：" %>
              </div>
              <div class='fldvalue'>
                <%= f.collection_select 'game_id', Game.find(:all), :id, :name, {:prompt => '---'}, :class => "selector selector02"%>
              </div>
            </div>
            <div class='rows s_clear'>
              <div class='fldid'>&nbsp;</div>
              <div class='fldvalue'><span class='button03 w-l'><span><%= button_to_function("发布", "Iyxzone.News.Builder.updateNews(#{@news.id}, event)") %></span></span></div>
            </div>
          <%end%>
      </div></div></div>

  </div></div>
</div></div></div></div>
<%= javascript_tag "
Iyxzone.News.Builder.editor = new nicEditor({iconsPath: '/images/nicEditorIcons.gif'}).panelInstance('news_data', {token: '#{form_authenticity_token}'});
" %>
